<% provide :title, t(:edit_word) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 form-group">
    <%= form_for [:admin, @word] do |f| %>
      <div class="fields">
        <p>
          <%= f.label :content %>
          <%= f.text_field :content, class: "form-control dn-admin-word-content" %>
        </p>
        <div id="answers">
          <%= f.fields_for :answers do |builder| %>
            <%= render "answer_fields", f: builder %>
          <% end %>
        </div>
        <%= add_answer_link t(:new_answer), :answers, "answers" %>
        <%= new_fields_template f, :answers %>
        <p>
          <%= f.submit t(:save_change), class: "btn btn-primary" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
