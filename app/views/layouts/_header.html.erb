<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("footer.page_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
            <li><%= link_to t("header.category"), "#" %></li>
            <li><%= link_to t("header.word"), "#" %></li>
            <li><%= link_to t("header.lession"), "#" %></li>
            <li><%= link_to t("header.profile"), current_user %></li>
            <li><%= link_to t("header.logout"), logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
          <li><%= link_to t("header.home"), "#" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
