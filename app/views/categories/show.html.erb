<h1 class="text-center"><%= t "header.category" %></h1>
<h3><%= @category.name %></h3>
<div class="show-category">
  <div class="text-center td-btn">
    <%= form_for @lesson do |f| %>
      <%= f.hidden_field :category_id, value: @category.id %>
      <%= f.submit t("lesson.do"), class: "btn btn-primary td-button" %>
    <% end %>
  </div>
  <br>
  <aside class="col-sm-10 col-sm-offset-1 ">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th class="col-sm-6 text-center"><%= t "header.word" %></th>
          <th class="col-sm-6 text-center"><%= t "header.answer" %></th>
        </tr>
      </thead>
      <tbody id="show-category">
        <%= render partial: "learn_word", collection: @words, as: :word %>
      </tbody>
    </table>
    <%= will_paginate @words %>
  </aside>
</div>
