<h1 class="text-center"><%= t "header.category" %></h1>
<h3><%= @category.name %></h3>
<div class="show-category">
  <div class="text-center td-btn">
    <%= form_for @lesson do |f| %>
      <%= f.hidden_field :category_id, value: @category.id %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
  <aside class="col-md-10 col-md-offset-1 ">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= t "header.word" %></th>
          <th><%= t "header.answer" %></th>
        </tr>
      </thead>
      <tbody id="show-category">
        <%= render @words %>
      </tbody>
    </table>
  </aside>
</div>
