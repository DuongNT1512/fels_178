<% provide :title, @user.name %>
<%= render "shared/show_user" %>
<% if logged_in? %>
  <div class="row ">
    <div class="col-md-8 col-md-offset-2 dn-front-group">
      <h1><%= t "activity.recent_activities" %></h1>
      <% if @feed_items.any? %>
        <ul class="activities">
          <%= render @feed_items %>
        </ul>
        <%= will_paginate @feed_items %>
      <% end %>
    </div>
  </div>
<% end %>
