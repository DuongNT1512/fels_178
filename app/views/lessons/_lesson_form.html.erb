<div class="text-center">
  <div class="timer">
    <h4><%= t "lesson.remaining_time" %></h4>
    <div id="clock" class="col-sm-4 col-sm-offset-4"></div>
    <%= hidden_field_tag :remaining_time, @remaining_time %>
  </div>
</div>

<div class="clearfix"></div>

<%= form_for @lesson do |f| %>
  <ol>
    <%= f.hidden_field :lesson_id, value: @lesson.id %>
    <%= f.hidden_field :status, value: :finished %>
    <%= f.fields_for :results do |t| %>
      <li><%= t.label t.object.word.content %></li>
      <div class="row td-lesson-question">
        <% t.object.word.answers.each do |answer| %>
          <div class="col-sm-6">
            <label class="text-center">
              <span class="td-input text-center">
                <%= t.radio_button :answer_id, answer.id %>
              </span>
              <span class="text-center"><%= answer.content %></span>
            </label>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= f.submit t("lesson.submit_btn"), class: "btn btn-primary submit-time-out",
      method: :patch %>
  </ol>
<% end %>
